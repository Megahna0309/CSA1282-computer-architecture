#include <stdio.h>
#include <stdlib.h> 

int main() {
    char binary[20]; 
    long decimal;
    printf("Enter a binary number: ");
    scanf("%s", binary);
    decimal = strtol(binary, NULL, 2);
    printf("Decimal equivalent: %ld\n", decimal);
    printf("Hexadecimal equivalent: %lX\n", decimal);
    return 0;
}
